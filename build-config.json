{
  "name": "Rafael Munaro Arquitetura",
  "version": "2.0.0",
  "description": "Website otimizado para Rafael Munaro Arquitetura com performance, acessibilidade e SEO avançados",

  "build": {
    "input": "index.html",
    "output": "dist/",
    "publicPath": "./",

    "optimization": {
      "css": {
        "critical": true,
        "minify": true,
        "purge": true,
        "splitChunks": true
      },

      "javascript": {
        "minify": true,
        "splitChunks": true,
        "preload": true,
        "defer": true
      },

      "images": {
        "webp": true,
        "responsive": true,
        "lazy": true,
        "compress": true
      },

      "fonts": {
        "preload": true,
        "display": "swap",
        "subset": true
      }
    },

    "performance": {
      "target": {
        "lcp": 2500,
        "fid": 100,
        "cls": 0.1,
        "fcp": 1800
      },

      "budget": {
        "css": "50KB",
        "js": "200KB",
        "images": "500KB",
        "total": "800KB"
      }
    },

    "accessibility": {
      "wcag": "2.1",
      "level": "AA",
      "autoFix": true,
      "reports": true
    },

    "seo": {
      "schema": true,
      "meta": true,
      "sitemap": true,
      "robots": true,
      "canonical": true
    },

    "security": {
      "csp": true,
      "csrf": true,
      "xss": true,
      "https": true,
      "headers": true
    }
  },

  "testing": {
    "automated": true,
    "suites": [
      "performance",
      "accessibility",
      "seo",
      "functionality",
      "security"
    ],

    "thresholds": {
      "performance": 90,
      "accessibility": 95,
      "seo": 95,
      "bestPractices": 95
    },

    "continuous": {
      "enabled": true,
      "interval": 3600000,
      "report": true
    }
  },

  "deployment": {
    "platform": "github-pages",
    "domain": "rafaelmunaroarquitetura.com",
    "ssl": true,
    "cdn": false,

    "headers": {
      "X-Frame-Options": "DENY",
      "X-Content-Type-Options": "nosniff",
      "X-XSS-Protection": "1; mode=block",
      "Strict-Transport-Security": "max-age=31536000",
      "Permissions-Policy": "geolocation=(), microphone=(), camera=()",
      "Referrer-Policy": "strict-origin-when-cross-origin"
    }
  },

  "monitoring": {
    "analytics": {
      "googleAnalytics": "G-XXXXXXXXXX",
      "googleTagManager": false
    },

    "errorTracking": {
      "sentry": false,
      "enabled": true
    },

    "performance": {
      "coreWebVitals": true,
      "realUserMonitoring": false,
      "customMetrics": true
    }
  },

  "features": {
    "pwa": {
      "enabled": true,
      "manifest": true,
      "serviceWorker": true,
      "offline": true
    },

    "theme": {
      "dark": true,
      "auto": true,
      "custom": false
    },

    "multilingual": {
      "enabled": false,
      "languages": ["pt-BR"],
      "default": "pt-BR"
    },

    "cms": {
      "enabled": false,
      "type": "static"
    }
  },

  "dependencies": {
    "critical": [
      "app.js"
    ],

    "high": [
      "navigation.js",
      "portfolio.js",
      "contact.js",
      "performance.js"
    ],

    "medium": [
      "seo.js",
      "accessibility.js"
    ],

    "low": [
      "animations.js",
      "lazy-loading.js",
      "testing.js"
    ]
  },

  "environment": {
    "development": {
      "debug": true,
      "sourcemaps": true,
      "hotReload": false,
      "errorOverlay": true
    },

    "staging": {
      "debug": true,
      "sourcemaps": false,
      "analytics": false,
      "errorTracking": true
    },

    "production": {
      "debug": false,
      "sourcemaps": false,
      "analytics": true,
      "errorTracking": true,
      "minify": true,
      "compress": true
    }
  },

  "quality": {
    "linting": {
      "css": true,
      "javascript": true,
      "html": true,
      "accessibility": true
    },

    "validation": {
      "html": true,
      "css": true,
      "seo": true,
      "performance": true
    },

    "audit": {
      "lighthouse": true,
      "axe": true,
      "wave": false,
      "pa11y": false
    }
  },

  "integrations": {
    "social": {
      "instagram": "https://www.instagram.com/rafaelmunaro.arq/",
      "facebook": "https://www.facebook.com/rafael.munaro.2025",
      "linkedin": "https://br.linkedin.com/in/rafael-soares-munaro"
    },

    "contact": {
      "email": "contato@rafaelmunaroarquitetura.com",
      "phone": "+55-19-99690-8104",
      "whatsapp": "https://api.whatsapp.com/send/?phone=5519996908104"
    },

    "location": {
      "address": "Rua Padre Fabiano, 1072, Centro",
      "city": "Capivari",
      "state": "SP",
      "country": "Brasil",
      "coordinates": {
        "lat": -22.9953,
        "lng": -47.4567
      }
    }
  },

  "metadata": {
    "author": "Rafael Munaro",
    "creator": "Rafael Munaro Arquitetura",
    "publisher": "Rafael Munaro Arquitetura",
    "keywords": [
      "arquiteto",
      "design de interiores",
      "porto alegre",
      "arquitetura residencial",
      "arquitetura comercial",
      "projeto arquitetônico",
      "design de interiores",
      "arquitetura moderna"
    ],

    "categories": [
      "architecture",
      "interior design",
      "construction",
      "real estate"
    ]
  }
}
